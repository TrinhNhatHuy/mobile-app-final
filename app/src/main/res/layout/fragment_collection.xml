<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f0e6"
    android:fitsSystemWindows="true">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="#faf5ed">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore Collection"
            android:textColor="#5D4037"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:gravity="center" />

    </LinearLayout>

    <!-- Category Filter Chips -->

    <!-- Artworks Grid Section -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPhotograph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photograph"
            android:textColor="#5D4037"
            android:textSize="14sp"
            app:checkedIcon="@null"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_canvas_selector"
            app:chipCornerRadius="16dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPainting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Painting"
            android:textColor="#5D4037"
            android:textSize="14sp"
            app:checkedIcon="@null"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_canvas_selector"
            app:chipCornerRadius="16dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipVessel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vessel"
            android:textColor="#5D4037"
            android:textSize="14sp"
            app:checkedIcon="@null"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_canvas_selector"
            app:chipCornerRadius="16dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print"
            android:textColor="#5D4037"
            android:textSize="14sp"
            app:checkedIcon="@null"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_canvas_selector"
            app:chipCornerRadius="16dp" />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/tvResultsCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Artworks"
        android:textColor="#5D4037"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="24dp">

        <!-- Artworks Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewExplore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="40dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:alpha="0.5"
                android:background="@drawable/artwork_placeholder"
                app:tint="#8D6E63" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No artworks found"
                android:textColor="#5D4037"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:fontFamily="serif" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Try selecting a different category"
                android:textColor="#8D6E63"
                android:textSize="14sp"
                android:gravity="center" />

        </LinearLayout>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="#7E57C2" />

    <!-- Load More Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLoadMore"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Load More Artworks"
        android:textSize="14sp"
        app:cornerRadius="0dp"
        app:strokeColor="#7E57C2"
        app:strokeWidth="1dp"
        android:backgroundTint="#faf5ed"
        android:textColor="#7E57C2"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"/>

</LinearLayout>