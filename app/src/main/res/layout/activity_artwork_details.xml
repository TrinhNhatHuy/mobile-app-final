<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f0e6"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Artwork Image Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <!-- Artwork Image -->
            <ImageView
                android:id="@+id/ivArtwork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/artwork_placeholder"
                android:contentDescription="Artwork image" />

            <!-- Gradient Overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentTop="true" />

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:padding="8dp"
                app:tint="@android:color/white" />

            <!-- Favorite Button -->
            <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_favorite_border"
                android:contentDescription="Add to favorites"
                android:padding="8dp"
                app:tint="@android:color/white" />

        </RelativeLayout>

        <!-- Artwork Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#faf5ed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Artwork Title -->
                <TextView
                    android:id="@+id/tvArtworkTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Water Lilies"
                    android:textColor="#5D4037"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:layout_marginBottom="8dp" />

                <!-- Artist Name -->
                <TextView
                    android:id="@+id/tvArtistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Claude Monet"
                    android:textColor="#8D6E63"
                    android:textSize="20sp"
                    android:fontFamily="serif"
                    android:layout_marginBottom="16dp" />

                <!-- Artwork Details Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <!-- Year -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Year"
                            android:textColor="#8D6E63"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/tvYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1916"
                            android:textColor="#5D4037"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Medium
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medium"
                            android:textColor="#8D6E63"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/tvMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oil on canvas"
                            android:textColor="#5D4037"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    -->

                    <!-- Dimensions
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dimensions"
                            android:textColor="#8D6E63"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/tvDimensions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200 Ã— 180 cm"
                            android:textColor="#5D4037"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    -->

                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#5D4037"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Water Lilies is a series of approximately 250 oil paintings by French Impressionist Claude Monet. The paintings depict Monet's flower garden at his home in Giverny, and were the main focus of his artistic production during the last thirty years of his life."
                    android:textColor="#8D6E63"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="24dp" />





            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Related Artworks Section
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Related Artworks"
                android:textColor="#5D4037"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginBottom="16dp" />

            <androidx.recyclerview.widget.RecyclerView
